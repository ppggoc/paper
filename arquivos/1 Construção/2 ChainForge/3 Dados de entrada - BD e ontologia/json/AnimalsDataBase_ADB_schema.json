{
    "database": {
        "name": "Animals Data Base (ADB)",
        "description": "Banco de dados que armazena informações sobre animais marcados para pesquisa em parques nacionais da África do Sul. O esquema é composto por seis tabelas inter-relacionadas para rastrear espécies, estudos e locais."
    },
    "tables": [
        {
            "name": "speciesList",
            "description": "Lista de espécies pertencentes à classe Animal.",
            "fields": [
                {
                    "name": "id",
                    "type": "integer",
                    "role": "primary key",
                    "description": "Identificador único da espécie."
                },
                {
                    "name": "class",
                    "type": "text",
                    "description": "Classe biológica (ex.: Mammalia, Aves, Reptilia)."
                },
                {
                    "name": "scientificName",
                    "type": "text",
                    "description": "Nome científico da espécie."
                }
            ],
            "relations": [
                {
                    "type": "one-to-many",
                    "target_table": "animals",
                    "foreign_key": "taxon",
                    "reference": "speciesList.scientificName"
                }
            ]
        },
        {
            "name": "studies",
            "description": "Estudos científicos realizados nos parques nacionais.",
            "fields": [
                {
                    "name": "id",
                    "type": "integer",
                    "role": "primary key",
                    "description": "Identificador único do estudo."
                },
                {
                    "name": "nationalParksId",
                    "type": "integer",
                    "role": "foreign key",
                    "references": "nationalParks.id",
                    "description": "Parque nacional onde o estudo foi conduzido."
                }
            ],
            "relations": [
                {
                    "type": "many-to-one",
                    "target_table": "nationalParks",
                    "foreign_key": "nationalParksId",
                    "reference": "nationalParks.id"
                },
                {
                    "type": "one-to-many",
                    "target_table": "animalTags",
                    "foreign_key": "studiesId",
                    "reference": "studies.id"
                }
            ]
        },
        {
            "name": "nationalParks",
            "description": "Parques nacionais onde são conduzidos os estudos.",
            "fields": [
                {
                    "name": "id",
                    "type": "integer",
                    "role": "primary key",
                    "description": "Identificador único do parque nacional."
                },
                {
                    "name": "shortName",
                    "type": "text",
                    "description": "Nome curto ou sigla do parque."
                },
                {
                    "name": "countriesId",
                    "type": "integer",
                    "role": "foreign key",
                    "references": "countries.id",
                    "description": "País ao qual o parque pertence."
                }
            ],
            "relations": [
                {
                    "type": "many-to-one",
                    "target_table": "countries",
                    "foreign_key": "countriesId",
                    "reference": "countries.id"
                },
                {
                    "type": "one-to-many",
                    "target_table": "studies",
                    "foreign_key": "nationalParksId",
                    "reference": "nationalParks.id"
                }
            ]
        },
        {
            "name": "countries",
            "description": "Países envolvidos nos estudos e que contêm parques nacionais.",
            "fields": [
                {
                    "name": "id",
                    "type": "integer",
                    "role": "primary key",
                    "description": "Identificador único do país."
                },
                {
                    "name": "name",
                    "type": "text",
                    "description": "Nome do país."
                }
            ],
            "relations": [
                {
                    "type": "one-to-many",
                    "target_table": "nationalParks",
                    "foreign_key": "countriesId",
                    "reference": "countries.id"
                }
            ]
        },
        {
            "name": "animals",
            "description": "Registra os animais individuais que foram marcados para pesquisa.",
            "fields": [
                {
                    "name": "id",
                    "type": "integer",
                    "role": "primary key",
                    "description": "Identificador único do animal."
                },
                {
                    "name": "taxon",
                    "type": "text",
                    "role": "foreign key",
                    "references": "speciesList.scientificName",
                    "description": "Espécie à qual o animal pertence."
                }
            ],
            "relations": [
                {
                    "type": "many-to-one",
                    "target_table": "speciesList",
                    "foreign_key": "taxon",
                    "reference": "speciesList.scientificName"
                },
                {
                    "type": "one-to-many",
                    "target_table": "animalTags",
                    "foreign_key": "animalsId",
                    "reference": "animals.id"
                }
            ]
        },
        {
            "name": "animalTags",
            "description": "Histórico de marcações, relacionando animais a estudos específicos.",
            "fields": [
                {
                    "name": "animalsId",
                    "type": "integer",
                    "role": "foreign key",
                    "references": "animals.id",
                    "description": "Animal marcado."
                },
                {
                    "name": "studiesId",
                    "type": "integer",
                    "role": "foreign key",
                    "references": "studies.id",
                    "description": "Estudo em que a marcação ocorreu."
                }
            ],
            "relations": [
                {
                    "type": "many-to-one",
                    "target_table": "animals",
                    "foreign_key": "animalsId",
                    "reference": "animals.id"
                },
                {
                    "type": "many-to-one",
                    "target_table": "studies",
                    "foreign_key": "studiesId",
                    "reference": "studies.id"
                },
                {
                    "type": "many-to-many",
                    "through": "animalTags",
                    "tables": [
                        "animals",
                        "studies"
                    ]
                }
            ]
        }
    ]
}